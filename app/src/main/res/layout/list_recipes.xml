<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:padding="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babypink">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/bglogin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/recipe_image"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayam Steak dengan lemon"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppinsbold"/>

            <TextView
                android:id="@+id/recipe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 MIN"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bgtime"
                android:padding="4dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/recipe_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayam steak dilengkapi saus lemon yang segar"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins"
                android:textColor="#642D2D"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
